{% extends 'base.html.twig' %}

{% block title %}Liste des Avis{% endblock %}

{% block body %}
    <h1>Liste des Avis</h1>

    <table>
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Avis</th>
                <th>Statut</th>
                <th>Habitat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for avis in avis %}
                <tr>
                    <td>{{ avis.Pseudo }}</td>
                    <td>{{ avis.Avis }}</td>
                    <td>{{ avis.Statut ? 'Approuv√©' : 'En attente' }}</td>
                    <td>{{ avis.habitat.Name }}</td>
                    <td>
                        <a href="{{ path('avis_edit', {id: avis.id_Avis}) }}">Modifier</a>
                        <form action="{{ path('avis_delete', {id: avis.id_Avis}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('avis_new') }}">Ajouter un Avis</a>
{% endblock %}
